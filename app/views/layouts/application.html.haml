!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MessageHub
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Message Hub', root_path, class: 'navbar-brand'
        #navbar-collapse.collapse.navbar-collapse
          .nav.navbar-nav.navbar-right
            %li= link_to 'Posts', posts_path
            -if current_user.present?
              %li= link_to current_user.full_name, edit_user_registration_path
              %li= link_to 'Sign out', destroy_user_session_path, method: :delete
            -else
              %li= link_to 'Sign in', new_user_session_path
              %li= link_to 'Sign up', new_user_registration_path

    - if flash[:notice]
      .alert.alert-success
        %button.close{"data-dismiss" => "alert", type: "button"} x
        = flash[:notice]
    - if flash[:danger]
      .alert.alert-danger
        %button.close{"data-dismiss" => "alert", type: "button"} x
        = flash[:danger]
    - if flash[:alert]
      .alert.alert-warning
        %button.close{"data-dismiss" => "alert", type: "button"} x
        = flash[:alert]

    %section.container
      = yield
